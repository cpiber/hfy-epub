{
  "name": "hfy-epub",
  "version": "0.2.3",
  "description": "EPUB-generator for r/HFY",
  "private": true,
  "scripts": {
    "watch": "webpack --watch --mode=development",
    "start": "webpack serve --open --mode=development",
    "build": "webpack --mode=production",
    "predeploy": "npm run clean && npm run build",
    "deploy": "gh-pages -d dist",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "clean": "rimraf dist",
    "postinstall": "sed -i 's/^        init();$/        setTimeout(init, 0);/' node_modules/@tinymce/tinymce-svelte/dist/component/Editor.svelte"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^3.0.0",
    "@types/downloadjs": "^1.4.3",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.1",
    "gh-pages": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.14",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-import": "^14.1.0",
    "precss": "^4.0.0",
    "rimraf": "^3.0.2",
    "snowpack": "^3.8.8",
    "svelte-hmr": "^0.14.12",
    "svelte-loader": "^3.1.3",
    "svelte-preprocess": "^4.10.7",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  },
  "dependencies": {
    "@tinymce/tinymce-svelte": "^1.0.0",
    "downloadjs": "^1.4.7",
    "epub-gen-memory": "^1.0.9",
    "nanoid": "^4.0.0",
    "path-browserify": "^1.0.1",
    "svelte": "^3.49.0",
    "svelte-dnd-action": "^0.9.19"
  },
  "keywords": [
    "epub",
    "reddit",
    "hfy"
  ],
  "homepage": "https://github.com/cpiber/hfy-epub#readme",
  "bugs": {
    "url": "https://github.com/cpiber/hfy-epub/issues",
    "email": "cp.piber@gmail.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/cpiber/hfy-epub.git"
  }
