{
  "name": "hfy-epub",
  "version": "0.2.1",
  "description": "EPUB-generator for r/HFY",
  "private": true,
  "scripts": {
    "watch": "webpack --watch --mode=development",
    "start": "webpack serve --open --mode=development",
    "build": "webpack --mode=production",
    "predeploy": "npm run clean && npm run build",
    "deploy": "gh-pages -d dist",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "clean": "rimraf dist",
    "postinstall": "sed -i 's/^        init();$/        setTimeout(init, 0);/' node_modules/@tinymce/tinymce-svelte/dist/component/Editor.svelte"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^2.0.1",
    "@types/downloadjs": "^1.4.2",
    "autoprefixer": "^10.3.5",
    "css-loader": "^6.3.0",
    "dotenv": "^10.0.0",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.3.0",
    "postcss": "^8.3.8",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^6.7.0",
    "precss": "^4.0.0",
    "rimraf": "^3.0.2",
    "snowpack": "^3.3.7",
    "svelte-hmr": "^0.14.7",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.9.5",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "dependencies": {
    "@tinymce/tinymce-svelte": "^0.1.1",
    "downloadjs": "^1.4.7",
    "epub-gen-memory": "^1.0.9",
    "nanoid": "^3.1.30",
    "path-browserify": "^1.0.1",
    "svelte": "^3.42.6"
  },
  "keywords": [
    "epub",
    "reddit",
    "hfy"
  ],
  "homepage": "https://github.com/cpiber/hfy-epub#readme",
  "bugs": {
    "url": "https://github.com/cpiber/hfy-epub/issues",
    "email": "cp.piber@gmail.com"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/cpiber/hfy-epub.git"
  }
}